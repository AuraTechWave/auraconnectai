[flake8]
max-line-length = 79
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .pytest_cache,
    build,
    dist,
    *.egg-info,
    alembic/versions/*.py
ignore = 
    # Allow long import lines in __init__.py files for better organization
    E501:*/__init__.py
extend-ignore = 
    # W503: line break before binary operator (conflicts with W504)
    W503
per-file-ignores =
    # Allow longer lines in migration files
    alembic/versions/*.py:E501
    # Allow longer lines in auto-generated files
    *migrations*.py:E501