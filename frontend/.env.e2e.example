# E2E Test Environment Variables
# Copy this file to .env.e2e and update with your test values
# DO NOT commit .env.e2e to version control

# Base URLs
E2E_BASE_URL=http://localhost:3000
E2E_API_BASE_URL=http://localhost:8000

# Tenant Configuration
E2E_TENANT_ID=test-restaurant-001
E2E_TENANT_NAME=Test Restaurant
E2E_TENANT_SUBDOMAIN=test
E2E_TENANT_DOMAIN=localhost

# Test User Credentials (Required)
E2E_CUSTOMER_EMAIL=test.customer@example.com
E2E_CUSTOMER_PASSWORD=TestPass123!
E2E_STAFF_EMAIL=test.staff@example.com
E2E_STAFF_PASSWORD=TestPass123!
E2E_ADMIN_EMAIL=test.admin@example.com
E2E_ADMIN_PASSWORD=TestPass123!
E2E_MANAGER_EMAIL=test.manager@example.com
E2E_MANAGER_PASSWORD=TestPass123!

# Timeouts (milliseconds)
E2E_API_TIMEOUT=30000
E2E_UI_TIMEOUT=15000
E2E_NAV_TIMEOUT=30000

# Feature Flags
E2E_SKIP_CLEANUP=false
E2E_VERBOSE=false
E2E_USE_STORAGE_STATE=true
E2E_USE_HTTPS=false

# Port Configuration
E2E_PORT=3000