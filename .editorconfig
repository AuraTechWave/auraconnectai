# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.{py,pyi}]
indent_size = 4
max_line_length = 88

[*.{js,jsx,ts,tsx,json,yml,yaml}]
indent_size = 2
max_line_length = 88

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.{html,css,scss,sass}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{sh,bash}]
indent_size = 2

[*.sql]
indent_size = 2
max_line_length = 120

[*.{toml,ini,cfg}]
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[package.json]
indent_size = 2

[*.{diff,patch}]
trim_trailing_whitespace = false