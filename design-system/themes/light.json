{
  "name": "Light Theme",
  "description": "Default light theme for AuraConnect Admin Dashboard",
  "extends": "base",
  "overrides": {
    "colors": {
      "semantic": {
        "background": {
          "primary": "#FFFFFF",
          "secondary": "#F8FAFC",
          "tertiary": "#F1F5F9"
        },
        "surface": {
          "card": "#FFFFFF",
          "subtle": "#F8FAFC",
          "hover": "rgba(42, 53, 71, 0.04)",
          "selected": "rgba(93, 135, 255, 0.08)",
          "disabled": "#F1F5F9"
        },
        "text": {
          "primary": "#2A3547",
          "secondary": "#64748B",
          "tertiary": "#94A3B8",
          "disabled": "#CBD5E1",
          "inverse": "#FFFFFF"
        },
        "border": {
          "default": "#E5EAEF",
          "light": "#F1F5F9",
          "dark": "#CBD5E1"
        },
        "primary": {
          "base": "#5D87FF",
          "light": "#ECF2FF",
          "dark": "#4570EA",
          "contrast": "#FFFFFF"
        },
        "secondary": {
          "base": "#49BEFF",
          "light": "#E8F7FF",
          "dark": "#3AA0E0",
          "contrast": "#FFFFFF"
        },
        "success": {
          "base": "#39CB7F",
          "light": "#E6FFED",
          "dark": "#2FA96A",
          "contrast": "#FFFFFF"
        },
        "warning": {
          "base": "#FFCE2C",
          "light": "#FFF8E1",
          "dark": "#F9B800",
          "contrast": "#2A3547"
        },
        "error": {
          "base": "#FF6E7F",
          "light": "#FFEEF1",
          "dark": "#E55865",
          "contrast": "#FFFFFF"
        },
        "info": {
          "base": "#49BEFF",
          "light": "#E8F7FF",
          "dark": "#3AA0E0",
          "contrast": "#FFFFFF"
        }
      }
    },
    "shadows": {
      "elevation": {
        "0": "none",
        "1": "0px 1px 2px rgba(42, 53, 71, 0.05)",
        "2": "0px 2px 4px rgba(42, 53, 71, 0.08)",
        "3": "0px 3px 6px rgba(42, 53, 71, 0.10)",
        "4": "0px 4px 8px rgba(42, 53, 71, 0.12)",
        "5": "0px 6px 12px rgba(42, 53, 71, 0.14)",
        "6": "0px 8px 16px rgba(42, 53, 71, 0.16)",
        "7": "0px 12px 24px rgba(42, 53, 71, 0.18)",
        "8": "0px 16px 32px rgba(42, 53, 71, 0.20)",
        "9": "0px 24px 48px rgba(42, 53, 71, 0.22)"
      }
    }
  }
}