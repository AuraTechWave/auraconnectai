{
  "name": "@auraconnect/design-system",
  "version": "1.0.0",
  "description": "AuraConnect Design System - Tokens, themes, and component specifications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "tokens",
    "themes",
    "components",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:tokens && npm run build:css && npm run build:exports",
    "build:tokens": "style-dictionary build",
    "build:css": "node scripts/generate-css.js",
    "build:exports": "node scripts/build-exports.js",
    "watch": "style-dictionary build --watch",
    "validate": "node scripts/validate-schemas.js",
    "verify": "node scripts/verify-build.js",
    "test": "jest",
    "test:contrast": "node scripts/test-contrast.js",
    "prepublishOnly": "npm run build && npm run validate"
  },
  "dependencies": {
    "style-dictionary": "^3.9.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "focus-trap-react": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ajv": "^8.12.0",
    "jest": "^29.0.0",
    "wcag-contrast": "^3.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./tokens": {
      "import": "./dist/tokens.mjs",
      "require": "./dist/tokens.js"
    },
    "./themes/*": "./dist/themes/*.js",
    "./css": "./dist/css/tokens.css",
    "./tailwind": "./dist/tailwind.preset.js",
    "./validator": "./src/client-validator.js",
    "./resolver": "./dist/resolver.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "PROPRIETARY"
}